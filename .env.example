# ExaPG Konfiguration
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# Deployment-Modus: single (Einzelknoten) oder cluster (verteiltes System)
DEPLOYMENT_MODE=single

# Anzahl der Worker-Knoten im Cluster-Modus
WORKER_COUNT=2

# Container-Namen
CONTAINER_NAME=exapg

# PostgreSQL Konfiguration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=exadb
POSTGRES_PORT=5432

# Ressourcenlimits
COORDINATOR_MEMORY_LIMIT=8g
WORKER_MEMORY_LIMIT=4g

# PostgreSQL Performance-Parameter
SHARED_BUFFERS=2GB
EFFECTIVE_CACHE_SIZE=6GB
WORK_MEM=128MB
MAINTENANCE_WORK_MEM=512MB
MAX_PARALLEL_WORKERS=8
MAX_PARALLEL_WORKERS_PER_GATHER=4
RANDOM_PAGE_COST=1.1
EFFECTIVE_IO_CONCURRENCY=200

# Monitoring-Ports
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=15d
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093
PG_EXPORTER_PORT=9187
NODE_EXPORTER_PORT=9100

# Grafana Konfiguration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=exapg_admin

# Alertmanager Konfiguration
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=admin@example.com
ALERT_SMTP_SERVER=smtp.example.com:587
ALERT_SMTP_USER=alerts@example.com
ALERT_SMTP_PASSWORD=alertpassword

# Columnar Storage Konfiguration
COLUMNAR_COMPRESSION=pglz
COLUMNAR_STRIPE_ROW_COUNT=150000
COLUMNAR_COMPRESSION_LEVEL=3

# Backup Konfiguration
BACKUP_SCHEDULE="0 0 * * *"  # TÃ¤glich um Mitternacht
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=yes 